<%= render 'shared/page_title', title: 'All Chefs' %>
<ul class="nav nav-tabs">
    <li>
        <%= link_to "Recipes", recipes_path%>
    </li>
    <li class="active">
        <%= link_to "Chefs", chefs_path %>
    </li>
</ul>

<div class="row">
    <div class="col-md-4 col-md-offset-4 center">
        <%= will_paginate %>
    </div>
</div>
<% @chefs.each do |chef| %>
<div class="row">
    <div class="col-md-4 col-md-offset-4 center">
       <!--<%= link_to gravatar_for(chef, size: 200), chef_path(chef) %>-->
        <%= link_to image_tag(chef.picture.url, size: "250x150", class: "gravatar"), chef_path(chef) if chef.picture? %> 
        <p>
            <h5>Chef name: <%=link_to chef.chefname, chef_path(chef) %></h5>
        </p>
        
    </div>

</div>
<hr/>
<% end %>